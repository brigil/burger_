<div class="container">
  
  <main class="container">

  <img id="goodPic" src="https://cblproperty.blob.core.windows.net/production/assets/blt9c98a24c5aedb02e-good-burger.png">

  <div class="row text-center">
    <div class="col">
      <h2 class="devoured">Add a Good Burger</h2>
      <form class="create-form">

        <div class="form-group list">
          <label for="bu">Good Burger Menu</label><br>
          <input type="text" id="bu" name="name">
        

        <button type="submit">Create Good Burger</button>
        </div>
      </form>
    </div>
  </div>

  <div class="row justify-content-md-center mt-5">
    <div class="col-md-5">
      <h2 class="devoured text-center">Your Good Burger</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-4">
      <h2 class="devoured text-center">Devoured Burgers!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</main>

  <!--Footer-->
  <div class="row mt-5">
    <div class="col-md-12">
      <div class="card footer">
        <div class="card-body footer-body text-white">
          <a href="https://brigil.github.io/Burger/" class="btn btn-primary mr-2" target="_blank">GitHub Repo</a>
          <a href="https://www.linkedin.com/in/brigittegil/" class="btn btn-primary" target="_blank">LinkedIn</a>
          <br>
          <br>
    
        </div>
      </div>
    </div>
</div>
